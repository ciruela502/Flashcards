<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="martakonik.flashcards">

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mainScreen.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".addFlashcard.AddFlashcardActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".addBox.AddBoxActivity" />
        <activity android:name=".learning.LearningActivity" />
        <activity android:name=".flashcardsList.FlashcardListActivity" />
        <activity android:name=".editFlashcards.EditFlashcardActivity" />
    </application>

</manifest>